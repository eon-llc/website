<div id="highlight">

	<div class="blog">
		{{#if model.blog_post }}
			<a href={{ model.blog_post.url }} target="_blank" rel="noopener noreferrer">
				<div class="wrap">
					<span class="label">Latest Blog Post:</span>
					<span class="title">{{ model.blog_post.title }}</span>
					<span class="author">by {{ model.blog_post.author }}</span>
					<span class="date"> on {{ model.blog_post.date }}</span>
				</div>
			</a>
		{{else}}
			<div class="failed">Failed to retrieve data.</div>
		{{/if}}
	</div>

	<div class="github">
		{{#if model.github_stats }}
			<div class="wrap">
				<span class="label">GitHub Stats:</span>
				<div class="items">
					<div class="item">
						<span>{{ model.github_stats.num_repos }}</span>
						<strong>Repos</strong>
					</div>
					<div class="item">
						<span>{{ model.github_stats.num_commits }}</span>
						<strong>Commits</strong>
					</div>
					<div class="item">
						<span>{{ model.github_stats.num_issues }}</span>
						<strong>Issues</strong>
					</div>
				</div>
			</div>
		{{else}}
			<div class="failed">Failed to retrieve data.</div>
		{{/if}}
	</div>

</div>

